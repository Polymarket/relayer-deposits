{
    "solidity.linter": "solhint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "eslint.validate": ["typescript"],
    "files.watcherExclude": {
      "**/.git/objects/**": false,
      "**/.git/subtree-cache/**": false,
      "**/.hg/store/**": false,
      "**/node_modules/*/**": false
    },
    "files.exclude": {
      "**/.DS_Store": false,
      "**/.git": false,
      "**/.hg": false,
      "**/.svn": false,
      "**/CVS": false
    }
  }
  